!!! 5

%html.no-js{:lang => "en"}

  %head

    -# ==========================================================================
    -# Head
    -# ==========================================================================

    %meta{:charset => "utf-8"}

    %title
    %meta{:name => "description", :content => ""}

    -# Mobile
    -# ==========================================================================

    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}

    -# Favicon
    -# ==========================================================================

    %link{:href => "/favicon.ico", :rel => "shortcut icon"}

    -# CSS
    -# ==========================================================================

    %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" }
    %style
      = ".folio-list-item {cursor: pointer;}"
      = ".folio-list-item > .panel-body > img {width: 100%;}"
      = ".modal-body img {width: 100%;}"


  %body

    -# ==========================================================================
    -# Content
    -# ==========================================================================

    .container
      .row
        %h1 Holly Mehakovic Folio

      .hr

      .row

        - folio.each do |item|
          .col-sm-3
            .panel.panel-default.folio-list-item{ 'data-toggle' => 'modal', 'data-target' => "#modal-#{ item.title.downcase.gsub(' ', '-') }" }
              .panel-heading= item.title
              .panel-body
                %img{ src: "#{ item.image }" }
                %p= item.description
                .meta
                  %small= "#{ item.category } | #{ item.date }"

    -# ==========================================================================
    -# Modals
    -# ==========================================================================

    - folio.each do |item|
      .modal.fade{ id: "modal-#{ item.title.downcase.gsub(' ', '-') }" }
        .modal-dialog
          .modal-content
            .modal-header
              %button{ class: 'close', 'data-dismiss' => 'modal' } &times;
              %h3.modal-title= item.title
            .modal-body
              %img{ src: "#{ item.image }" }
              %p= item.body
    -# JS
    -# ==========================================================================

    -# jQuery & Bootstrap

    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"}

