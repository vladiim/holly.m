!!! 5

%html.no-js{:lang => "en"}

  %head

    -# ==========================================================================
    -# Head
    -# ==========================================================================

    %meta{:charset => "utf-8"}

    %title
    %meta{:name => "description", :content => ""}

    -# Mobile
    -# ==========================================================================

    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}

    -# Favicon
    -# ==========================================================================

    %link{:href => "/favicon.ico", :rel => "shortcut icon"}

    -# CSS
    -# ==========================================================================

    %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" }
    %style
      = ".folio-list-item {cursor: pointer;}"
      = ".folio-list-item > .panel-body > img {width: 100%;}"
      = ".modal-body img {width: 100%;}"
      = ".jumbotron {margin-top: 5px; padding: 5px}"
      = ".modal-content {height:700px;padding-bottom:30px}"
      = ".modal-body {overflow-y:auto; height: 100%;}"
      = ".jumbotron {background-color:#F1C40F}"
      = ".modal-header {background-color:#F1C40F}"
      = ".panel-heading {background-color:#F1C40F !important}"
      = '.btn-dark {background-color:#333; border-color:#333; color:#F1C40F; font-weight:bold;}'
      = 'a.btn-dark:hover {color:#fff;}'
      = '.jumbotron {padding-bottom: 20px;}'
      = '.jumbotron p {margin: -10px 0 0 0;}'
      = '.jumbotron h3 {margin: 0 0 20px 0;}'


  %body

    -# ==========================================================================
    -# Content
    -# ==========================================================================

    .container
      .jumbotron
        %h1 Holly Mehakovic Folio
        %p A selection of work.
        %h3 Strategic copy, creative content.
        %a{ href: 'mailto:hollymehakovic@gmail.com?Subject=Hello%20Holly', target: '_top', class: 'btn btn-dark btn-lg'} Email me

      .hr

      .container
        - folio.each_slice(4) do |row_array|
          .row
            - row_array.each do |item|
              .col-md-3
                .panel.panel-default.folio-list-item{ 'data-toggle' => 'modal', 'data-target' => "#modal-#{ item.title.downcase.gsub(' ', '-').gsub('.', '-') }" }
                  .panel-heading
                    %b= item.title

                  .panel-body
                    %i= item.subtitle
                    %img{ src: "/images/#{ item.image }" }
                    %i= item.cute_description
                    %p= item.description
                    .meta
                      %small= "#{ item.category } | #{ item.date }"

    -# ==========================================================================
    -# Modals
    -# ==========================================================================

    - folio.each do |item|
      .modal.fade{ id: "modal-#{ item.title.downcase.gsub(' ', '-').gsub('.', '-') }" }
        .modal-dialog
          .modal-content
            .modal-header
              %button{ class: 'close', 'data-dismiss' => 'modal' } &times;
              %h3.modal-title= item.title
            .modal-body
              %img{ src: "/images/#{ item.image }" }
              %p= item.body
    -# JS
    -# ==========================================================================

    -# jQuery & Bootstrap

    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"}

